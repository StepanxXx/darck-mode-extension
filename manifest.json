{
  "manifest_version": 3,
  "name": "Темний режим для сайтів",
  "description": "Переглядайте сайти у темному режимі з можливістю виключень для окремих доменів.",
  "version": "1.0.0",
  "action": {
    "default_title": "Темний режим",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["styles/dark.css"],
      "run_at": "document_start"
    }
  ]
}
